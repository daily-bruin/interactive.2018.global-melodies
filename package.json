{
  "name": "flatpage.globalmelodies",
  "version": "1.0.0",
  "description": "Interactive for A&E's global melodies series",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "app": "^0.1.0",
    "mapbox-gl": "^0.45.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-mapbox-gl": "^3.8.0"
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "node-sass": "^4.9.0",
    "parcel-bundler": "^1.8.1"
  },
  "scripts": {
    "format": "prettier --write \"{src,tests}/**/*.ts\" --single-quote --trailing-comma es5",
    "lint": "eslint --fix verbose \"src/**/*.js\"",
    "watch": "parcel index.html",
    "build": "parcel build index.html --public-url ./"
  },
  "husky": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint",
      "yarn run format",
      "git add ."
    ]
  }
}
